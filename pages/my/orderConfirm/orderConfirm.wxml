<view class="pageConfirm pageBg">
    <view class="address">
        <view class="item" bindtap="onRouteAddress">
            <view class="title">
                <text class="name">糖糖</text>
                <text class="tel">12345678910</text>
            </view>
            <view class="desc">北京市海淀区海淀区海淀区</view>
            <image class="img" src="../../../images/arrow-right@2x.png"></image>
        </view>
    </view>
    <!--//End--->
    <view class="goods">
        <view class="title">订单商品</view>
        <view class="main">
            <view class="thumb">
                <image mode="aspectFit" src="https://img14.360buyimg.com/n1/jfs/t3682/362/1363475238/559844/ab37eb62/58229915N5796455e.jpg" />
            </view>
            <view class="info">
                <view class="desc">介绍介绍介绍介绍介绍介绍介绍 介绍介绍介绍</view>
                <view class="cate">颜色分类：棕色:尺码：大号</view>
            </view>
            <view class="price">
                <view class="txt">￥89.00</view>
                <view class="num">x1</view>
            </view>
        </view>
        <view class="stepper">
            <view class="sub"><image src="./images/icon-sub.png" /></view>
            <view class="num">
                <input name="name" value="1" />
            </view>
            <view class="add"><image src="./images/icon-add.png" /></view>
        </view>
    </view>
    <!--//End--->

    <view class="infos">
        <view class="item">
            <text class="t1">商品金额</text>
            <text class="t2">￥89.00</text>
        </view>
        <view class="item">
            <text class="t1">折扣券</text>
            <text class="t2">-￥0.00</text>
        </view>
        <view class="item">
            <text class="t1">运费</text>
            <text class="t2">包邮</text>
        </view>
        <view class="item">
            <text class="t1">订单备注</text>
            <input class="ipt" type="text" name="orderMark" placeholder="选填，请先和商家协商一致"/>
        </view>
    </view>
    <!--//End--->

    <view class="pays">
        <view class="title">支付方式</view>
        <view class="item wx" data-type="1" bindtap="onPayType">
            <image class="icon" src="./images/icon-wx.png" />
            <text>微信支付</text>
            <image wx:if="{{payType == 1}}" class="radio" src="./images/icon-radio-active.png" />
            <image wx:else class="radio" src="./images/icon-radio.png" />
        </view>
        <view class="item zfb" data-type="2" bindtap="onPayType">
            <image class="icon" src="./images/icon-zfb.png" />
            <text>微信支付</text>
            <image wx:if="{{payType == 2}}" class="radio" src="./images/icon-radio-active.png" />
            <image wx:else class="radio" src="./images/icon-radio.png" />
        </view>
    </view>
    <!--//End--->

    <view class="total">
        <view class="info">
            <text class="txt">共1件</text>
            <text class="count">合计：</text>
            <text class="price">￥94.23</text>
            <view class="btn">提交订单</view>
        </view>
        <view class="line_top"></view>
    </view>
</view>